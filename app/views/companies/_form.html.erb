<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :contact_name %>
    <%= f.input :contact_phone %>
    <%= f.input :logo %>
    <%= f.input :info %>
    <%= f.input :approved %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
