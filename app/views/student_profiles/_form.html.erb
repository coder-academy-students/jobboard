<%= simple_form_for(@student_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :portfolio %>
    <%= f.input :github %>
    <%= f.input :linkedin %>
    <%= f.input :bio %>
    <%= f.input :image %>
    <%= f.input :phone %>
    <%= f.input :available %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
