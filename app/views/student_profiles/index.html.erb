<p id="notice"><%= notice %></p>

<h1>Student Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Portfolio</th>
      <th>Github</th>
      <th>Linkedin</th>
      <th>Bio</th>
      <th>Image</th>
      <th>Phone</th>
      <th>Available</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.first_name %></td>
        <td><%= student_profile.last_name %></td>
        <td><%= student_profile.portfolio %></td>
        <td><%= student_profile.github %></td>
        <td><%= student_profile.linkedin %></td>
        <td><%= student_profile.bio %></td>
        <td><%= student_profile.image %></td>
        <td><%= student_profile.phone %></td>
        <td><%= student_profile.available %></td>
        <td><%= student_profile.user %></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Profile', new_student_profile_path %>
